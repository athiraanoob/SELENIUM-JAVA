package Condition;

import java.util.Scanner;

public class Loopfor {

	public static void main(String[] args) {
      System.out.println("enter the limit");
      Scanner ss=new Scanner(System.in);
      int i=Integer.parseInt(ss.nextLine());
      for(int j=0;j<=i;j++)
      {
    	  if((j%2)==0)
    	System.out.println(j);  
      }

	}

}
